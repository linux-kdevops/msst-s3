# Docker RustFS configuration
# Uses RustFS container from rustfs/rustfs:latest

# RustFS Docker endpoint (mapped to port 9002 to avoid MinIO conflict)
CONFIG_S3_ENDPOINT_URL="http://localhost:9002"
CONFIG_S3_ACCESS_KEY="rustfsadmin"
CONFIG_S3_SECRET_KEY="rustfsadmin"
CONFIG_S3_REGION="us-east-1"
CONFIG_S3_USE_SSL=n
CONFIG_S3_BUCKET_PREFIX="msst-rustfs"

# Enable core tests for comparison
CONFIG_TEST_BASIC=y
CONFIG_TEST_MULTIPART=y
CONFIG_TEST_VERSIONING=y
CONFIG_TEST_ACL=y
CONFIG_TEST_ENCRYPTION=n
CONFIG_TEST_LIFECYCLE=n
CONFIG_TEST_PERFORMANCE=y
CONFIG_TEST_STRESS=y
CONFIG_TEST_EDGE=y
CONFIG_TEST_INTEGRATION=y
CONFIG_TEST_COMPATIBILITY=n

# Test parameters
CONFIG_TEST_RUN_MODE="parallel"
CONFIG_TEST_PARALLEL_JOBS=10
CONFIG_TEST_TIMEOUT=300
CONFIG_TEST_RETRY_COUNT=2
CONFIG_TEST_OBJECT_SIZES="1KB,1MB,10MB,100MB"
CONFIG_TEST_BUCKET_COUNT=5
CONFIG_TEST_OBJECT_COUNT=50

# Output settings
CONFIG_OUTPUT_FORMAT="json"
CONFIG_OUTPUT_VERBOSE=2
CONFIG_OUTPUT_DIR="./results"
CONFIG_OUTPUT_TIMESTAMP=y
CONFIG_OUTPUT_SAVE_LOGS=y

# No Ansible
CONFIG_ANSIBLE_ENABLED=n

# RustFS vendor type
CONFIG_VENDOR_TYPE="rustfs"

# Debug settings
CONFIG_DEBUG_ENABLED=y
CONFIG_DEBUG_KEEP_BUCKETS=n
